<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@drawable/list_item_selectable_bg_light"
    android:clickable="true"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/favorite_item_icon"
        style="@style/MaterialIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_star_black_24dp" />

    <TextView
        android:id="@+id/favorite_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/favorite_item_remove"
        android:layout_toRightOf="@id/favorite_item_icon" />

    <TextView
        android:id="@+id/favorite_item_district"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/favorite_item_name"
        android:layout_below="@id/favorite_item_name"
        android:layout_toLeftOf="@+id/favorite_item_remove" />

    <ImageButton
        android:id="@+id/favorite_item_remove"
        style="@style/CustomImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:alpha="0.6"
        android:src="@drawable/ic_highlight_off_black_24dp" />

</RelativeLayout>